{
    "name": "velikonja/sync-fs",
    "description": "PHP Library with command line tool for simple syncing folders via configuration file.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matej Velikonja",
            "email": "matej@velikonja.si"
        }
    ],

    "require": {
        "php": ">=5.3.3",
        "symfony/console": ">=2.3",
        "symfony/process": ">=2.3",
        "symfony/yaml": ">=2.3",
        "symfony/config": ">=2.3",
        "symfony/filesystem": ">=2.3",
        "symfony/finder": ">=2.3"
    },

    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "squizlabs/php_codesniffer": "~1.5",
        "kherge/box": "~2.0"
    },

    "autoload": {
        "psr-0": {
            "SyncFS": "lib/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "SyncFS\\Test": "tests/"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },

    "bin": [
        "app/syncfs"
    ]
}
