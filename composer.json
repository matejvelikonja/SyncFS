{
    "name": "velikonja/sync-fs",
    "description": "PHP library/tool for syncing remote or local folders.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matej Velikonja",
            "email": "matej@velikonja.si"
        }
    ],

    "require": {
        "php": ">=5.3.3",
        "symfony/console": ">=2.3",
        "symfony/yaml": ">=2.3",
        "symfony/config": ">=2.3",
        "symfony/filesystem": ">=2.3",

        "albertofem/rsync-lib": "dev-master"
    },

    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "symfony/process": ">=2.3"
    },

    "autoload": {
        "psr-0": {
            "SyncFS": "lib/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "SyncFS\\Test": "tests/"
        }
    },

    "target-dir": "Velikonja/SyncFS"
}
